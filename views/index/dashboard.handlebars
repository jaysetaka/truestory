<div class="row" style="margin-top: 10px !important;">
  <div class="col s12 m6">
    <div class="card light-blue darken-4">
      <div class="card-content white-text">
        <span class="card-title">Welcome {{user.firstName}}</span>
        <p>Welcome to your dashboard, view all your stories below</p>
      </div>
    </div>
  </div>
</div>
{{#if stories}}
    {{#each stories}}
    <div class="row">
      <div class="col" style="width:65rem">
        <div class="card-panel">
          <span>Title{{title}}</span>
          <p class="story-text">
            {{stripTags (truncate body)}}
          </p>
          <a class="btn left-align" href="/stories/edit/{{id}}"><i class="fa fa-pencil"></i></a>
          
          <form action="/stories/{{id}}?_method=DELETE" method="post" id="delete-form">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn red"><i class="fa fa-remove"></i></button>
          </form>
        </div>
      </div>
    </div>
